{% schema %}
    {
        "name": "t:sections.product-landing-sales.name",
        "class": "section-product-landing-sales",
        "settings": [
            {
                "type": "richtext",
                "id": "heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "t:common.image.label"
            },
            {
                "type": "image_picker",
                "id": "image_mobile",
                "label": "t:common.image_mobile.label"
            },
            {
                "type": "text",
                "id": "button_label",
                "default": "Button label",
                "label": "t:common.button.label",
                "info": "t:common.button.info"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "t:common.button.url.label"
            }
        ],
        "presets": [
			{
				"name": "t:sections.product-landing-sales.name"
			}
        ]
    }
{% endschema %}