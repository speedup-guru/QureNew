
<div class="{{ section.settings.classname }}"{% if template == 'index' %} id="result_section"{% endif %}>
    <div class="container">
        {% if section.settings.heading %}
            <div class="section_header text-center">
                <h2 class="title-lg pb-2">
                    {{ section.settings.heading }}
                </h2>
                {% if section.settings.text %}
                    {{ section.settings.text }}
                {% endif %}
            </div>    
        {% endif %}
        {% if section.blocks.size > 0 %}
            <div class="swiper twa__swiper {% if template == 'index' %}skin_slider1{% else %}skin_slider{% endif %} dot_pagination"
                id="twa__swiper-skinSlider"
                data-section-id="skinSlider" 
                data-autoplay="false" 
                data-loop="false" 
                data-centerslide="false"
                data-mobile="1" 
                data-tablet="1" 
                data-desktop="1" 
                data-spacing="30"
                data-arrowleft="skinSlider-swiper-prev" 
                data-arrowright="skinSlider-swiper-next">
                <div class="swiper-wrapper">
                    {%- for block in section.blocks -%}
                        <div class="swiper-slide">
                            <div class="skin_item">
                                <div class="row">
                                    <div class="col-md-6">
                                        {% if block.settings.heading %}
                                            <div class="skin_item_header">{{ block.settings.heading }}</div>
                                        {% endif %}
                                        <div class="skincare_left">
                                            <div class="row gx-2">
                                                <div class="col-6">
                                                    <div class="result_img_m before_img">
                                                        {% if block.settings.image_before != blank %}
                                                            <img class="img-fluid" src="{{ block.settings.image_before | img_url: '400x' }}" alt="">
                                                        {% endif %}
                                                        {% if block.settings.text_before %}
                                                            <span class="result_badge">{{ block.settings.text_before }}</span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="result_img_m after_img">
                                                        {% if block.settings.image_after != blank %}
                                                            <img class="img-fluid" src="{{ block.settings.image_after | img_url: '400x' }}" alt="">
                                                        {% endif %}
                                                        {% if block.settings.text_after %}
                                                            <span class="result_badge">{{ block.settings.text_after }}</span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
    
                                            <div class="r_c_info">
                                                <div class="c_information">
                                                    {% if block.settings.image_country != blank %}
                                                        <div class="flag_img pe-2">
                                                            <img class="img-fluid" src="{{ block.settings.image_country | img_url: '100x' }}" alt="">
                                                        </div>
                                                    {% else %}
                                                        <div class="flag_img pe-2">
                                                            <img src="{{ 'america_f.webp' | asset_url }}" alt="" class="img-fluid">
                                                        </div>  
                                                    {% endif %}
                                                    <p class="r_c_name pe-4">{{ block.settings.client }}</p>
                                                    <div class="verified_img pe-2">
                                                        <img src="{{ 'verified.svg' | asset_url }}" alt="">
                                                    </div>
                                                    <p>Verified customer</p>
                                                </div>
                                            </div>
                                        </div>
    
                                    </div>
                                    <div class="col-md-6">
                                        <div class="skincare_right">
                                            <div class="skincare_percent">
                                                <div class="progressCont">
                                                    <span class="progressWrapper">
                                                        <span class="progessInfo text-dark">{{ block.settings.progress }}%</span>
                                                        <svg class="vMQQx" height="77" width="77"
                                                            viewBox="-29 -29 58 58">
                                                            <defs>
                                                                <linearGradient id="gradient" x1="0" x2="0" y1="1"
                                                                    y2="0">
                                                                    <stop offset="0%" stop-color="#C7E7DC"></stop>
                                                                    <stop offset="100%" stop-color="#C7E7DC"></stop>
                                                                </linearGradient>
                                                            </defs>
                                                            <circle stroke="rgba(221, 224, 228, 1)" fill="none"
                                                                pathLength="100" class="K4v4P" r="24"
                                                                style="stroke-width: 1px;"></circle>
                                                            <circle visibility="visible" fill="none" pathLength="100"
                                                                transform="rotate(-90)" class="OKwUu" r="24"
                                                                stroke="url(#gradient)"
                                                                style="stroke-dasharray: 100; stroke-dashoffset: 13; stroke-width: 5px;">
                                                            </circle>
                                                        </svg>
                                                    </span>
                                                </div>
                                                {% if block.settings.progress_text != blank %}
                                                    {{ block.settings.progress_text }}
                                                {% endif %}
                                            </div>
                                            {% if block.settings.text != blank %}
                                                <div class="ss_list">
                                                    {{ block.settings.text }}
                                                </div> 
                                            {% endif %}
                                            <div class="ss_clinical">
                                                <div class="ss_c_title">
                                                    <h4>{{ block.settings.feedback_title }}</h4>
                                                </div>

                                                <div class="ss_c_detail">
                                                    {% if block.settings.feedback_text %}
                                                        {{ block.settings.feedback_text }}
                                                    {% endif %}
                                                    {% if block.settings.popup_content != blank %}
                                                        <a class="popup-modal ss_c_link" href="#test-modal{{ forloop.index }}">{{ block.settings.popup_link_text }} <span><img src="{{ 'info.svg' | asset_url }}" alt=""></span></a>    

                                                        <div id="test-modal{{ forloop.index }}" class="mfp-hide white-popup-block skin_popup">
                                                            <div class="ss_clinical">
                                                                <div class="ss_c_title">
                                                                    <h4>Clinical Study</h4>
                                                                </div>
                                                                <div class="ss_c_detail">
                                                                    <p>{{ block.settings.popup_content }}</p>
                                                                </div>
                                                                <button title="Close (Esc)" type="button"
                                                                    class="mfp-close">close</button>
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            {% if block.settings.product != blank %}
                                                <div class="ss_skin_mask">
                                                    {% if block.settings.product_image != blank %}
                                                        <div class="ss_mask_img">
                                                            <img class="img-fluid" src="{{ block.settings.product_image | img_url: '250x' }}" alt="{{ block.settings.product_image.alt | escape }}">
                                                        </div>
                                                    {% endif %}
                                                    <div class="ss_mask_info">
                                                        <h5>{{ block.settings.product.title }}</h5>
                                                        <a href="{{ routes.root_url }}products/{{ block.settings.product.handle }}">Learn more &gt;</a>
                                                    </div>
                                                </div>
                                            {%  elsif block.settings.product_title != blank %}
                                                <div class="ss_skin_mask">
                                                    {% if block.settings.product_image != blank %}
                                                        <div class="ss_mask_img">
                                                            <img class="img-fluid" src="{{ block.settings.product_image | img_url: '250x' }}" alt="{{ block.settings.product_image.alt | escape }}">
                                                        </div>
                                                    {% endif %}
                                                    <div class="ss_mask_info">
                                                        <h5>{{ block.settings.product_title }}</h5>
                                                        <a href="{{ block.settings.product_url }}">Learn more &gt;</a>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
    
                                    </div>
                                </div>
    
                            </div>
                        </div>
                    {%- endfor -%}
                </div>
                <div class="swiper-pagination"></div>
            </div>
        {% endif %}
    </div>
</div>

