<div class="main_banner ">
    {% if section.settings.image %}
        <picture>
            <source media="(min-width:1920px)" srcset="{{ section.settings.image | img_url: 'master' }}">
            <source media="(min-width:1600px)" srcset="{{ section.settings.image | img_url: '1600x' }}">
            <source media="(min-width:1100px)" srcset="{{ section.settings.image | img_url: '1100x' }}">
            {% if section.settings.image_mobile %}
                <source media="(min-width:720px)" srcset="{{ section.settings.image_mobile | img_url: '720x' }}">
                <source media="(min-width:540px)" srcset="{{ section.settings.image_mobile | img_url: '540x' }}">
            {% endif %}
            {% if section.settings.image_mobile %}
                <img class="img-fluid bg_banner" src="{{ section.settings.image_mobile | img_url: '540x' }}" alt="{{ section.settings.image_mobile.alt | escape }}" width="125" height="173">
            {% else %}
                <img class="img-fluid bg_banner" src="{{ section.settings.image | img_url: '540x' }}" alt="{{ section.settings.image.alt | escape }}" width="125" height="173">
            {% endif %}
        </picture>
    {% endif %}

    <div class="main_b_wrapper">
        <div class="container">
            <div class="m_b_content">
                <div class="section_header pb-4 text-light">
                    {% if section.settings.heading != blank %}
                        <h2 class="title-xl">{{ section.settings.heading }}</h1>
                    {% endif %}
                </div>
                <div class="progressCont text-center text-md-left">
                    {% if section.settings.subheading != blank %}
                        <p>Get<span class="progressWrapper px-0 px-md-2">
                            <span class="progessInfo">56%</span>
                            <!-- <span> -->
                            <svg class="vMQQx" height="68" width="68" viewBox="-29 -29 58 58">
                                <defs>
                                    <linearGradient id="gradient" x1="0" x2="0" y1="1" y2="0">
                                        <stop offset="0%" stop-color="#C7E7DC"></stop>
                                        <stop offset="100%" stop-color="#C7E7DC"></stop>
                                    </linearGradient>
                                </defs>
                                <circle stroke="rgba(221, 224, 228, 1)" fill="none" pathLength="100"
                                    class="K4v4P" r="24" style="stroke-width: 1px;"></circle>
                                <circle visibility="visible" fill="none" pathLength="100"
                                    transform="rotate(-90)" class="OKwUu" r="24" stroke="url(#gradient)"
                                    style="stroke-dasharray: 100; stroke-dashoffset: 44; stroke-width: 5px;">
                                </circle>
                            </svg>
                        </span>
                        <strong>{{ section.settings.subheading }}</strong>
                    </p>   
                    {% endif %}
                </div>

                {% if section.blocks.size > 0 %}
                    <div class="btn-auto">
                            {%- for block in section.blocks -%}
                                <a href="{{ block.settings.link_url }}" class="btn_white mx-3" aria-label="{{ block.settings.link_label | escape }}">{{ block.settings.link_label }}</a>
                            {%- endfor -%}
                        </div>
                {% endif %}

                <div class="m_b_review text-light text-center text-md-left">
                    <img src="{{ 'light-green-star.svg' | asset_url }}" alt="">
                    {% if section.settings.text != blank %}
                        {{ section.settings.text |  replace: '<p>', '<p class="pt-2">' }}
                    {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- -- main banner end -- -->

{% schema %}
    {
        "name": "t:sections.main-banner.name",
        "class": "section-main-banner",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "t:common.subheading.label"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "t:common.text.label"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "t:common.image.label"
            },
            {
                "type": "image_picker",
                "id": "image_mobile",
                "label": "t:common.image_mobile.label"
            }
        ],
        "blocks": [
            {
			"type": "link",
			"name": "t:sections.main-banner.blocks.link.name",
            "limit": 2,
			"settings": [
                {
                    "type": "text",
                    "id": "link_label",
                    "default": "Link label",
                    "label": "t:common.link.label",
                    "info": "t:common.link.info"
                },
                {
                    "type": "url",
                    "id": "link_url",
                    "label": "t:common.link.url.label"
                }
			]
		}
        ],
        "presets": [
			{
				"name": "t:sections.main-banner.name"
			}
        ]
    }
{% endschema %}