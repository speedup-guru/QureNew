<style>
    @media(max-width:767px) {
    .qurify_lp .press_bl .ps_wrapper {
        flex-direction: unset;
    }
}
</style>

<!-- -- main banner start -- -->
<div class="refill_bl py-3 py-md-4 tabSlider">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="refill_info pt-0 pt-md-3">
                    <div class="refill_review">
                        {% if section.settings.rating_image != blank %}
                            <div class="star_gp">
                                <img src="{{ section.settings.rating_image | img_url: 'master' }}" alt="">
                            </div>
                        {% endif %}
                        <p class="text-sm fw-normal">{{ section.settings.rating_text }}</p>
                    </div>

                    <div class="section_header">
                        {% if section.settings.top_heading != blank %}
                            {{ section.settings.top_heading |  replace: '<h5>', '<h5 class="subheading">'  }}
                        {% endif %}
                        <h2 class="title-lg">{{ section.settings.heading }}</h2>
                    </div>

                    <div class="ss_list mw-452 pt-2 pb-4 d-none d-md-block">
                        {{ section.settings.text }}
                    </div>

                    {%- for block in section.blocks -%}
                        {% if block.type == 'button' %}
                            {% if block.settings.button_label != blank %}
                                <div class="get_clearer_wrapper text-center">
                                    <p><span><img src="https://qureskincaredns.com/new/assets/derma-sm.svg" alt=""></span>{{ block.settings.text_first }}</p>
                                    <a class="btn btn-lg btn-primary btn_green" href="{{ block.settings.button_url }}">{{ block.settings.button_label }}</span>
                                    </a>
                                    <p><span> <img src="https://qureskincaredns.com/new/assets/money-sm.svg" alt=""></span>{{ block.settings.text_second }}</p>
                                </div>
                            {% endif %}
                        {% endif %}
                    {%- endfor -%}
                </div>
            </div>
            <div class="col-md-6  order-1 order-md-2">
                <div class="refill_slider mw-mob-100">
                    <div class="refill_s_tab_content">
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-home" role="tabpanel"
                                aria-labelledby="pills-home-tab">
                                <div class="swiper twa__swiper productSlider dot_pagination"
                                    id="twa__swiper-productSlider" data-section-id="productSlider"
                                    data-autoplay="false" data-loop="false" data-centerslide="false"
                                    data-mobile="1.1" data-tablet="1" data-desktop="1" data-spacing="10"
                                    data-arrowleft="productSlider-swiper-prev"
                                    data-arrowright="productSlider-swiper-next">
                                    <div class="swiper-wrapper">
                                        {%- for block in section.blocks limit:section.settings.product_images_limit -%}
                                            {% if block.type == 'image' %}
                                                <div class="swiper-slide">
                                                    <a class="banner-popup-link" id="popup-link">
                                                        <picture id="image-id">
                                                            <source media="(min-width:1100px)" srcset="{{ block.settings.image | img_url: '1100x' }}">
                                                            <source media="(min-width:720px)" srcset="{{ block.settings.image | img_url: '720x' }}">
                                                            <source media="(min-width:540px)" srcset="{{ block.settings.image | img_url: '540x' }}">
                                                            <img src="{{ block.settings.image | img_url: '340x' }}" alt="" class="img-fluid tab_img" width="100" height="100">
                                                        </picture>
                                                    </a>
                                                </div>
                                            {% endif %}
                                        {%- endfor -%}
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="pills-profile" role="tabpanel"
                                aria-labelledby="pills-profile-tab">
                                <div class="swiper twa__swiper realResultSlider dot_pagination"
                                    id="twa__swiper-realResultSlider" data-section-id="realResultSlider"
                                    data-autoplay="false" data-loop="false" data-centerslide="false"
                                    data-mobile="1.1" data-tablet="1" data-desktop="1" data-spacing="10"
                                    data-arrowleft="realResultSlider-swiper-prev"
                                    data-arrowright="realResultSlider-swiper-next">
                                    <div class="swiper-wrapper">
                                        {%- for block in section.blocks limit:section.settings.before_after_images_limit  offset:section.settings.product_images_limit -%}
                                            {% if block.type == 'image' %}
                                                <div class="swiper-slide">
                                                    <picture id="image-id">
                                                        <source media="(min-width:1100px)" srcset="{{ block.settings.image | img_url: '1100x' }}">
                                                        <source media="(min-width:720px)" srcset="{{ block.settings.image | img_url: '720x' }}">
                                                        <source media="(min-width:540px)" srcset="{{ block.settings.image | img_url: '540x' }}">
                                                        <img src="{{ block.settings.image | img_url: '340x' }}" alt="" class="img-fluid tab_img" width="100" height="100">
                                                    </picture>
                                                </div>
                                            {% endif %}
                                        {%- endfor -%}
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="refill_s_tab">
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-home" type="button" role="tab"
                                    aria-controls="pills-home" aria-selected="true">Product</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link d-none d-md-block" id="pills-profile-tab"
                                    data-bs-toggle="pill" data-bs-target="#pills-profile" type="button"
                                    role="tab" aria-controls="pills-profile" aria-selected="false">Real
                                    Results</button>
                                <button class="nav-link d-block d-md-none" id="pills-profile-tab"
                                    data-bs-toggle="pill" data-bs-target="#pills-profile" type="button"
                                    role="tab" aria-controls="pills-profile" aria-selected="false">Before &
                                    After</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- -- main banner end -- -->


{% schema %}
    {
        "name": "Main",
        "class": "section-main",
        "settings": [
            {
                "type": "richtext",
                "id": "top_heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "t:common.text.label"
            },
            {
                "type": "text",
                "id": "rating_text",
                "label": "t:common.rating.label"
            },
            {
                "type": "image_picker",
                "id": "rating_image",
                "label": "t:common.image.label"
            },
            {
                "type": "range",
                "id": "product_images_limit",
                "min": 0,
                "max": 10,
                "step": 1,
                "unit": "t:sections.product-landing.settings.product_images_limit.unit",
                "label": "t:sections.product-landing.settings.product_images_limit.label",
                "default": 0
            },
            {
                "type": "text",
                "id": "product_button_label",
                "default": "Product",
                "label": "t:common.button.label",
                "info": "t:common.button.info"
            },
            {
                "type": "range",
                "id": "before_after_images_limit",
                "min": 0,
                "max": 10,
                "step": 1,
                "unit": "t:sections.product-landing.settings.before_after_images_limit.unit",
                "label": "t:sections.product-landing.settings.before_after_images_limit.label",
                "default": 0
            },
            {
                "type": "text",
                "id": "before_after_button_label",
                "default": "Before & After",
                "label": "t:common.button.label",
                "info": "t:common.button.info"
            }
        ],
        "blocks": [
            {
                "type": "image",
                "name": "t:common.image.label",
                "limit": 12,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "t:common.image.label"
                    }
                ]
		    },
            {
                "type": "button",
                "name": "t:common.button.name",
                "limit": 1,
                "settings": [
                    {
                        "type": "text",
                        "id": "button_label",
                        "default": "Button label",
                        "label": "t:common.button.label",
                        "info": "t:common.button.info"
                    },
                    {
                        "type": "url",
                        "id": "button_url",
                        "label": "t:common.button.url.label"
                    },
                    {
                        "type": "text",
                        "id": "text_first",
                        "label": "t:common.text.label",
                        "default": "Dermatologist-Reviewed"
                    },
                    {
                        "type": "text",
                        "id": "text_second",
                        "label": "t:common.text.label",
                        "default": "30-Day Money-Back Guarantee"
                    }
                ]
		    }
        ]
    }
{% endschema %}